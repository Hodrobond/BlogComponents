{
  "compilerOptions": {
    "module": "ES6",
    "outDir": "./dist",
    "rootDir": "src",
    "jsx": "react",
    "emitDeclarationOnly": true,
    "declaration": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es6",
    "types": ["react", "jest"],
    "lib": ["es6", "dom"]
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "dist/**",
    "__tests__"
  ]
}
